<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/date_loc_details"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding"
    android:paddingLeft="@dimen/default_padding"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/event_year"
        android:text="2015"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/TextAppearance.Media.SmallDetails" />

    <TextView
        android:id="@+id/event_month"
        android:text="Sep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_year"
        android:layout_alignRight="@id/event_year"
        style="@style/TextAppearance.Media.SmallDetails" />

    <TextView
        android:id="@+id/event_date"
        android:text="21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@id/event_year"
        style="@style/TextAppearance.Media.Rating"
        android:layout_marginRight="@dimen/small_padding" />

    <TextView
        android:id="@+id/start_time"
        android:text="10am"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_date"
        style="@style/TextAppearance.Media.SmallDetails" />

    <TextView
        android:id="@+id/end_time"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_time"
        android:layout_toRightOf="@id/event_date"
        style="@style/TextAppearance.Media.SmallDetails"
        android:text="12am" />

    <ImageView
        android:id="@+id/participants_count_image"
        android:paddingStart="@dimen/default_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/start_time"
        android:src="@drawable/ic_group_black_24dp" />

    <TextView
        android:id="@+id/no_of_participants"
        android:layout_toEndOf="@+id/participants_count_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants"
        style="@style/TextAppearance.Media.SmallDetails"
        />

    <ImageView
        android:id="@+id/goto_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/no_of_participants"
        android:src="@drawable/ic_chat_black_24dp"
        android:paddingLeft="@dimen/double_padding"
        android:layout_marginRight="@dimen/double_padding"

        />

    <ImageView
        android:id="@+id/location_text_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/location_text"
        android:src="@drawable/ic_location_on_black_24dp" />

    <TextView
        android:id="@+id/location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        android:layout_marginEnd="@dimen/small_padding"
        android:layout_alignParentRight="true"
        style="@style/TextAppearance.Media.SmallDetails"
        />
</RelativeLayout>
